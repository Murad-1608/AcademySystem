@model List<StudentManagementSystem.Entities.Student>
@{
    ViewData["Title"] = "Tələbələr";
}
<h2>Tələbələr</h2>
<table id="example" class="table table-striped">
    <thead>
        <tr>
            <th>№</th>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Qrup</th>
            <th>İxtisas</th>
            <th>Telefon</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Id</td>
                <td>@Model[i].Name</td>
                <td>@Model[i].Surname</td>
                <td>@Model[i].Group</td>
                <td>@Model[i].Specialty</td>
                <td>@Model[i].PhoneNumber</td>
                <td>
                    <a asp-controller="student" asp-action="delete" asp-route-id="@Model[i].Id" class="btn btn-danger" onclick="return confirm('Silmək istəyirsiniz?')">Sil</a>
                    <a asp-controller="student" asp-action="update" asp-route-id="@Model[i].Id" class="btn btn-success">Yenilə</a>
                </td>

            </tr>
        }


    </tbody>
</table>